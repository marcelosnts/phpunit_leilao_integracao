<phpunit
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="https://schema.phpunit.de/8.0/phpunit.xsd"
        bootstrap="vendor/autoload.php"
        colors="true">
    <testsuites>
        <testsuite name="unit">
            <directory>tests/Unit</directory>
        </testsuite>

        <testsuite name="integrationDao">
            <directory>tests/Integration/Dao</directory>
        </testsuite>

        <testsuite name="integrationApi">
            <directory>tests/Integration/Web</directory>
        </testsuite>
    </testsuites>

    <logging>
        <log type="testdox-text" target="testdox.txt" />
    </logging>
</phpunit>